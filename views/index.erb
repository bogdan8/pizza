<div class="container">
	<div class="row">
	<% @product.each do |item| %>
		<div class="col-lg-4 col-md-4">
			<p>Назва: <%= item[:title] %></p>
			<p>Опис: <%= item[:description] %></p>
			<p>Ціна: <%= item[:price] %></p>
			<p>Розмір: <%= item[:size] %></p>
			<p><button class="btn btn-info" onclick="sumfing()">Додати в корзину</button></p>
			<br />
			<img width="100%" height="300px" src="<%= item[:path_to_image] %>"/>
		</div>
	<% end %>
	</div>
</div>