<table class="table table-striped">
	<thead>	
		<tr>
			<th>Імя</th>
			<th>Опис</th>
			<th>Розмір</th>
			<th>Ціна</th>
			<th>Кількість</th>
		</tr>
	</thead>
	<tbody>
	<% total_price = 0 %>
	<% total_pizza = 0 %>
	<% @items.each do |item| %>
		<tr>
			<td><%= item[0].title %></td>
			<td><%= item[0].description %></td>
			<td><%= item[0].size %></td>
			<td><%= item[0].price %></td>
			<td><%= item[1] %></td>
		</tr>
		<% total_price += item[0].price.to_i %>
		<% total_pizza += item[1].to_i %>
	<% end %>
	<tr>
		<td></td>
		<td></td>
		<td></td>
		<td>Загальна ціна <%= total_price %>.грн</td>
		<td>Кількість піц <%= total_pizza %></td>
	</tr>
	</tbody>
</table>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<form action="/place_order" method="POST">
			<input name="order[orders_input]" type="hidden" id="orders_input"></input>
				<div class="form-group">
					<label>Ваше ім'я</label>
					<input name="order[name]" type="text" class="form-control" placeholder="Ваше ім'я"></input>
				</div>
				<div class="form-group">
					<label>Ваш телефон</label>
					<input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон"></input>
				</div>
				<div class="form-group">
					<label>Ваш адреш</label>
					<textarea name="order[address]" type="text" class="form-control" placeholder="Ваше ім'я"></textarea>
				</div>
				<button type="submit" class="btn btn-success btn-lg">Замовити</button>
			</form>
		</div>
	</div>
</div>