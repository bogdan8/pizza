<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <form action="/feedbacks" method="POST">
        <div class="form-group">
          <label>Ваше ім'я</label>

          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-font" aria-hidden="true"></i></div>
            <input name="feedbacks[name]" type="text" class="form-control" placeholder="Ваше ім'я">
          </div>
        </div>
        <div class="form-group">
          <label>Телефон</label>

          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-font" aria-hidden="true"></i></div>
            <input name="feedbacks[phone]" type="text" class="form-control" placeholder="Телефон">
          </div>
        </div>
        <div class="form-group">
          <label>Ваш текст</label>

          <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-link" aria-hidden="true"></i></div>
            <textarea name="feedbacks[descriptions]" class="form-control" placeholder="Ваш текст"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-success btn-lg">Додати</button>
      </form>
    </div>
  </div>
</div>