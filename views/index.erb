<div class="container">
	<div class="row">
	<% @product.each do |item| %>
		<div class="col-lg-4 col-md-4">
			<p>Назва: <%= item[:title] %></p>
			<p>Опис: <%= item[:description] %></p>
			<p>Розмір: <%= item[:size] %>см</p>
			<p>Ціна: <%= item[:price] %>грн</p>
			<p>
				<div class="row">
					<div class="col-lg-1">
						<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= item[:id] %>)">+</button>
					</div>
					<div class="col-lg-1">
						<h4 style="margin: 5px 8px;" id="count<%= item[:id] %>"></h4>
					</div>
					<div class="col-lg-1">
						<button class="btn btn-sm btn-danger" onclick="delete_to_cart(<%= item[:id] %>)">-</button>
					</div>
					<div class="col-lg-9">
						<button class="btn btn-sm btn-success" onclick="clear_local()">Очистити корзину</button>
					</div>
				</div>
			</p>
			<br />
			<img width="100%" height="300px" src="<%= item[:path_to_image] %>"/>
		</div>
	<% end %>
	</div>
</div>